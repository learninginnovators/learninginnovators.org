---
const { courseTtitle, url, intro, avatar, price } = Astro.props;
---

<div>
  <div
    class="bg-blue-50 p-8 rounded-3xl h-full justify-between relative flex flex-col items-start">
    <div>
      <div class="flex flex-col gap-4 w-full">
        <div class="flex flex-col md:items-center md:flex-row gap-4">
          <img
            class="inline-block size-16 rounded-full shrink-0"
            src={avatar}
            alt={intro}
          />

          <div class="flex mt-2 flex-col gap-2">
            <p class="text-lg font-display text-blue-500 ">
              {courseTtitle}
            </p>
            <p class="text-blue-950 text-xl font-display">
              {price}
            </p>
          </div>
        </div>
        <p class="mt-4 text-sm text-blue-900 ">
          {intro}
        </p>
      </div>
    </div>
    <div class="mt-8">
      <a
        href={url}
        class="items-center inline-flex w-full focus:outline-disc bg-blue-50 duration-200 ring-2 focus:ring-blue-600 focus:ring-offset-2 font-medium lg:w-auto h-8 hover:bg-blue-100 justify-center px-6 py-1 ring-blue-200  rounded-full text-blue-600 text-center text-xs">
        Enroll Now &nbsp; &rarr;
      </a>
    </div>

  </div>
</div>
