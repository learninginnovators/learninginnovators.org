---
import { getCollection } from "astro:content";
const allPosts = await getCollection("courses");
import EntriesTwo from "./EntriesTwo.astro";
---

<section>
  <div class="relative px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24">
    <div class="max-w-2xl mx-auto text-center">
      <div>
        <p
          class="text-4xl font-semibold font-display text-blue-950 sm:text-6xl">
          Explore our most <span class="lg:block">popular courses</span>
        </p>
        <p class="text-slate-500 mt-4 max-w-sm mx-auto">
          Dive into courses loved by learners worldwide
        </p>
      </div>
      <div class="mx-auto mt-4">
        <a
          href="/courses/all-courses-three"
          class="items-center inline-flex w-full focus:outline-disc bg-green-500 duration-500 focus:ring-2 focus:ring-green-600 focus:ring-offset-2 font-medium lg:w-auto h-12 hover:bg-green-600 justify-center px-6 py-1 rounded-full text-white text-center text-sm gap-3 md:w-auto"
          >See all our courses <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-circle-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="1.25"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path
              stroke="none"
              d="M0 0h24v24H0z"
              fill="none"
            ></path>
            <path d="M11 9l3 3l-3 3"></path>
            <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0z"></path>
          </svg></a
        >
      </div>
    </div>
    <ul
      class="grid grid-cols-1 relative md:grid-cols-2 mt-12 list-none gap-2 text-center"
      role="list">
      {
        allPosts.slice(0,2 ).map((post) => (
          <EntriesTwo
            url={"/courses/" + post.slug}
            courseTtitle={post.data.courseTitle}
            intro={post.data.intro}
            price={post.data.price}
            level={post.data.level}
          />
        ))
      }
    </ul>
  </div>
</section>
