const stats = [
  {
    category: "Students",
    count: "230,000+",
  },
  {
    category: "Institutions",
    count: "5",
  },
  {
    category: "Courses",
    count: "800+",
  },
  {
    category: "Educators",
    count: "200+",
  },
];
const values = [
  {
    title: "Excellence",
    description:
      "We are committed to the relentless pursuit of excellence. We work hard, persevere through challenges, and never settle for less than our best. With grit and determination, we strive to overcome obstacles, achieve ambitious goals, and create transformative change.",
  },
  {
    title: "Unity",
    description:
      "We believe in the power of unity. We are at our best when we work as a team, appreciating the individuality of our colleagues and encouraging everyone to contribute their strengths. Together, we achieve our shared goals while helping each other grow.",
  },
  {
    title: "Integrity",
    description:
      "We hold integrity and transparency at the heart of everything we do. We uphold the highest ethical standards, building trust through honest communication and accountability. Our commitment to integrity ensures that our actions align with our vision for a better future in education.",
  },
  {
    title: "Innovation",
    description:
      "We embrace innovation as the key to transforming education. By creating dynamic, learner-centered systems, we empower both educators and learners, equipping them with the tools to support growth and inspire individual potential.",
  },

];
---

<section>
  <div class="relative px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:pb-24">
    <div class="text-center">
      <h1
        class="text-5xl font-semibold font-display text-blue-950 sm:text-6xl text-balance w-3/4 mx-auto">
        The mission behind Learning Innovators.
      </h1>
      <p class="mt-4 text-slate-600 text-base w-1/2 mx-auto text-balance">
        Our mission is to transform learning by empowering institutions and educators with assessment models that drive personalised learning, supported by software tools designed with learners and educators in mind.
      </p>

      <p class="mt-4 text-slate-600 text-base w-1/2 mx-auto text-balance">
        Learning Innovators is working toward a world where education is learner-centered, with assessment that supports learning and fosters agency, curiosity, and meaningful growth.
      </p>

