---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Learning Innovators"
  description="Learning Innovators support educational transformation, providing tools and resources for educators to enhance learning experiences. Our tools and approaches support a student-centred view of educationt that responds to the challenges and opportunities related to assessment in the age of generative artificial intelligence (genAI)."
  canonical="https://learninginnovators.org/"
  openGraph={{
    url: "https://learninginnovators.org/",
    title: "Learning Innovators Home",
    description: "Connect with Learning Innovators to transform education.",
    // images: [
    //   {
    //     url: "https://learninginnovators.org/logo.png",
    //     // width: 1200,
    //     // height: 630,
    //     // alt: "Open Graph Image Alt",
    //     // type: "image/jpeg",
    //   },
    ],
    site_name: "Learning Innovators",
    type: "website",
    locale: "en_US",
  }}
/>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Basic Meta Tags -->
<title>Learning Innovators</title>
<meta
  name="description"
  content="A brief description of your website content."
/>
<meta name="keywords" content="keyword1, keyword2, keyword3" />
<meta name="author" content="Your Name or Company Name" />

<!-- Favicons -->
<link rel="icon" href="/logo.png" sizes="any" />
<link rel="icon" href="/logo.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/favicon_io/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />

<!-- Favicon for IE -->
<link rel="shortcut icon" href="/logo.png" type="image/x-icon" />

<!-- Favicons for different sizes -->
<link rel="icon" type="image/png" sizes="16x16" href="/favicon_io/favicon-16x16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon_io/favicon-32x32.png" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://learninginnovators.org/" />
<meta property="og:title" content="Learning Innovators" />
<meta
  property="og:description"
  content="Learning innovators support educational transformation."
/>
<meta
  property="og:image"
  content="https://learninginnovators.org/logo.png"
/>

