---
const { title, url, description, meetingDate, location } = Astro.props;
---

<li
  class="bg-green-100 p-8 rounded-3xl gap-12 grid lg:grid-cols-3 h-full justify-between">
  <div class="flex flex-col gap-8">
    <div class="inline-flex justify-between items-start gap-4 w-full">
      <p class="text-lg font-display text-blue-950 lg:text-xl">
        {title}
      </p>
    </div>
    <div>
      <a
        href={url}
        class="items-center inline-flex focus:outline-disc bg-green-50 duration-200 focus:ring-2 focus:ring-green-60 focus:ring-offset-2 font-medium lg:w-auto h-12 hover:bg-green-100 gap-3 justify-center px-6 py-1 rounded-full text-green-600 text-center text-sm w-auto">
        Enroll today
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-circle-chevron-right"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="1.25"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round">
          <path
            stroke="none"
            d="M0 0h24v24H0z"
            fill="none"
          ></path>
          <path d="M11 9l3 3l-3 3"></path>
          <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0z"></path>
        </svg>
      </a>
    </div>
  </div>
  <div class="flex flex-col gap-8 lg:col-span-2">
    <div class="flex flex-col gap-2 w-full">
      <div>
        <span
          class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-800">
          {meetingDate}
        </span>
      </div>
      <div>
        <p
          class="inline-flex gap-2 items-center rounded-md text-xs text-blue-950">
          {location}
        </p>
      </div>
    </div>
    <p class="text-base text-blue-950">{description}</p>
  </div>
</li>
