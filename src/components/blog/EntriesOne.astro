---
const { title, url, description, pubDate, author, image } = Astro.props;
---

<li>
  <a
    href={url}
    title={title}
    class="group flex flex-col h-full justify-between">
    <article class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="w-full">
        <img
          class="aspect-[384/246] object-cover bg-center h-full rounded-2xl"
          src={image}
          alt={title}
        />
      </div>
      <div
        class="flex flex-col items-start justify-between flex-1 w-full mt-4 p-4 lg:col-span-2 order-first">
        <div class="w-full">

          <p class="text-lg font-display text-blue-950 lg:text-6xl text-balance">
            {title}
          </p>
          <p class="mt-2 text-sm text-slate-600 line-clamp-3 lg:text-xl text-balance">
            {description}
          </p>
        </div>
        <footer>
          <div class="inline-flex text-blue-950 space-x-1 items-center mt-6">
            <p class="text-xs">
              {author}
            </p>
            <span aria-hidden="true">&middot;</span>
            <div class="flex text-xs">
              <time datetime="2020-03-16"> {pubDate}</time>
            </div>
          </div>
        </footer>
      </div>
    </article>
  </a>
</li>
